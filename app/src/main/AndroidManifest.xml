<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.com.opinionciudadana">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_escritorio"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_escritorio"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.com.opinionciudadana.activities.EncuestaActivity"></activity>
        <activity
            android:name="com.com.opinionciudadana.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.com.opinionciudadana.activities.RecoverPasswordActivity" />
        <activity android:name="com.com.opinionciudadana.activities.CreateAccountActivity" />
        <activity android:name="com.com.opinionciudadana.activities.LoginActivity" />
        <activity
            android:name="com.com.opinionciudadana.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>